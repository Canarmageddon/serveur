{% extends 'base.html.twig' %}

{% block title %}Cost index{% endblock %}

{% block body %}
    <h1>Cost index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreationDate</th>
                <th>Category</th>
                <th>Beneficiaries</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cost in costs %}
            <tr>
                <td>{{ cost.id }}</td>
                <td>{{ cost.creationDate ? cost.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ cost.category }}</td>
                <td>{{ cost.beneficiaries }}</td>
                <td>
                    <a href="{{ path('app_cost_show', {'id': cost.id}) }}">show</a>
                    <a href="{{ path('app_cost_edit', {'id': cost.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cost_new') }}">Create new</a>
{% endblock %}
